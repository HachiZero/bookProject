<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro">
 <!-- <select id="selectDataAll" resultType="dto"> -->
 <select id="selectDataAll" resultType="dto">
  select * from membertab
 </select>
 
 <!-- 재사용 가능한 구문은 별도 작성 가능 -->
 <sql id="my1">id, name, password, regdate</sql>
 <sql id="my2">where id = #{id}</sql>
 
 <select id="selectDataById" parameterType="string" resultType="dto" statementType="PREPARED">
  select <include refid="my1" /> from membertab <include refid="my2" />
 </select>
 
 <insert id="insertData" parameterType="dto">
  insert into membertab values(#{id},#{name},#{password},now())
 </insert>
 
 <update id="updateData" parameterType="dto">
  update membertab set name=#{name} <include refid="my2" />
 </update>
 
 <delete id="deleteData" parameterType="int">
  delete from membertab <include refid="my2" />
 </delete>
</mapper>